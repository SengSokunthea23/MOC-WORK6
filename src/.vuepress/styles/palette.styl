.sidebar-group p span
    font-family: 'Hanuman'
    text-shadow: 1px 0.4px 1px rgb(166, 166, 166)
.sidebar-group .sidebar-link
    text-shadow: 1px 0.4px 1px rgb(238, 238, 238)
.custom-block-title 
    font: 1.3rem sans-serif
    font-family: 'Hanuman'
blockquote
    border-left: 0.2rem solid #0008ff
    background-color: rgb(228, 228, 228)
