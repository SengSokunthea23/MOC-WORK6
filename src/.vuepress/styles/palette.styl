.page .theme-default-content details p
    color: white
.page .theme-default-content details li
    color: white
.page .theme-default-content .custom-block .custom-block-title
    margin-bottom: 0.6rem
.nav-item a
    font-family: 'Hanuman'
.page .theme-default-content p strong
    color:rgb(252, 95, 95)
.page .theme-default-content .custom-block.tip
    background-color: #f3f5f7
